.nested-fields.callout
  .row
    .col-12.col-md-6.order-1.order-md-2
      .float-end= link_to_remove_association 'Remove address', f,
      class: 'btn btn-primary tiny alert'
    .col-12.col-md-6.order-2.order-md-1
      .mb-3
        = f.label :location, 'Location Description', class: "form-label"
        = f.text_field :location, 
        placeholder: 'Examples - Home, Business, Home/Office, Shop',
        class: "form-control"
  .row
    .col-12.col-md-6
      .mb-3
        = f.label :street_1, class: "form-label"
        = f.text_field :street_1, class: "form-control"
    .col-12.col-md-6
      .mb-3
        = f.label :street_2, class: "form-label"
        = f.text_field :street_2, class: "form-control"
  .row
    .col-12.col-md-6
      .mb-3
        = f.label :city, class: "form-label"
        = f.text_field :city, class: "form-control"
    .col-6.col-md-3
      .mb-3
        = f.label :state, class: "form-label"
        = f.text_field :state, class: "form-control"
    .col-6.col-md-3
      .mb-3
        = f.label :zip, class: "form-label"
        = f.text_field :zip, class: "form-control"
