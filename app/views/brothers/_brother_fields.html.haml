.nested-fields.callout
  .row
    .col-12.col-md-3
      = f.label :relation
      = f.select :relation,
      options_for_select(Brother.select_relation_options, selected: f.object.relation)
    .col-12.col-md-6
      = f.label :name
      = f.text_field :name
    .col-12.col-md-3
      .float-right.remove_link
        = link_to_remove_association 'Remove brother', f,
        class: 'btn btn-primary tiny alert'
