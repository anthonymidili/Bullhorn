- provide :title, 'Company'

.row.center-content
  .col-12.col-md-8
    .float-end
      %ul.menu
        %li
          = link_to edit_company_path(@company), title: 'Edit company' do
            = fa_icon 'edit', text: 'Edit company'
        %li
          = link_to @company,
          data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
          class: 'delete_link', title: 'Destroy company' do
            = fa_icon 'trash'
    .company_logo
      %h1
        - if @company.logo.attached?
          = image_tag medium_image(@company.logo)
        = @company.name
    %b Industry:
    = @company.industry.name
    - if @company.address
      %br/
      %b Address:
      = @company.address.full_address
    %hr/
    = link_to 'Back', companies_path, title: 'Back'
