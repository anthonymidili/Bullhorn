- provide :title, 'Sign up'
.row.center-content
  .col-12.col-md-8
    %h2 Sign up
    = form_with model: resource, as: resource_name,
    url: registration_path(resource_name), local: true, 
    data: { turbo: false } do |f|
      = render 'notifications/error_messages', object: f.object
      .field.mb-3
        = f.label :email, class: "form-label"
        = f.email_field :email, autocomplete: "username", class: "form-control"
      .field.mb-3
        = f.label :username, class: "form-label"
        = f.text_field :username, autocomplete: "off", class: "form-control"
      .field.mb-3
        = f.label :password, class: "form-label"
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        = f.password_field :password, autocomplete: "off", class: "form-control"
      .field.mb-3
        = f.label :password_confirmation, class: "form-label"
        = f.password_field :password_confirmation, autocomplete: "off",
        class: "form-control"
      .mb-3
        Please read the 
        = link_to "Privacy Policy", privacy_policy_path, target: "_blank"
        before signing up.
      .honeypot.mb-3
        = label_tag :body, "Body", for: "body", class: "form-label"
        = text_field_tag :body, nil, id: "body", class: "form-control",
        placeholder: "!WARNING! Do not fill this out unless you are a BOT!"
      .actions.mb-3
        = f.submit "Sign up", class: 'btn btn-primary'
    .mb-3= render "devise/shared/links"
