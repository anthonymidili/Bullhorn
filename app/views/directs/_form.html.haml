= form_with model: direct, id: dom_id(direct, "form") do |f|
  = render 'notifications/error_messages', object: f.object
  .row
    .col-12.col-md-6
      .field.mb-3
        = f.label :search, class: "form-label"
        .ui-widget
          .input-group
            %span.input-group-text
              %i.fa-solid.fa-magnifying-glass
            = text_field_tag :search, params[:search], id: 'search',
            class: 'form-control',
            data: { controller: "search-box", autocomplete_source: search_users_path }
    .col-12.col-md-6
      .field.mb-3
        = f.label :name, class: "form-label"
        = f.text_field :name, class: "form-control"
  .actions
    = f.submit class: "btn btn-primary"
