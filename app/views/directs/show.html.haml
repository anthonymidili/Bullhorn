= turbo_stream_from @direct
.callout
  = render @direct, from_show: true

.mb-3
  = link_to directs_path do
    %i.fa-solid.fa-hand-point-left
    Back

%h1 Messages
.message-box
  = turbo_frame_tag "messages", data: { controller: "media" } do
    = render @messages
  -# Infinite scroll comments with turbo.
  = render "infinite_scroll/load_more"
  -# New messages will push older messages up
  .anchor

= render "messages/form", direct: @direct, message: @message

.mb-3
  = link_to directs_path do
    %i.fa-solid.fa-hand-point-left
    Back
    