= turbo_stream.append @append_to do
  = render @scrolled_objects

- if @next_page
  = turbo_stream.replace "load_more_#{@from_controller}" do
    = turbo_frame_tag "load_more_#{@from_controller}", 
    src: infinate_scroll_index_path(from_controller: @from_controller, 
    from_action: @from_action, page: @next_page, id: @id, 
    format: :turbo_stream), loading: :lazy
- else
  = turbo_stream.remove "load_more_#{@from_controller}"
