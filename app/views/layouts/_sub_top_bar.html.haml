.sub_top_bar
  %nav.navbar.navbar-expand-lg{style: "background-color: #13395f;"}
    .container-fluid
      %ul.navbar-nav
        %li.nav-item
          = link_to users_path, title: 'Roster', class: "nav-link" do
            = fa_icon 'users', text: 'Roster'
        %li.nav-item
          = link_to events_path, title: 'Events', class: "nav-link" do
            = fa_icon 'calendar', text: 'Events', type: :regular
            - if Event.in_the_future.any?
              %span.count= Event.in_the_future.count
        %li.nav-item
          = link_to job_listings_path, title: 'Job Listings', class: "nav-link" do
            = fa_icon 'building', text: 'Job Listings'
            - if JobListing.by_currently_listed.any?
              %span.count= JobListing.by_currently_listed.count
        %li.nav-item
          = link_to resumes_path, title: 'Resumes', class: "nav-link" do
            = fa_icon 'file-alt', text: 'Resumes'
            - if Resume.by_currently_listed.any?
              %span.count= Resume.by_currently_listed.count
        %li.nav-item
          = link_to news_letters_path, class: "nav-link" do
            = fa_icon 'newspaper', text: 'Newsletters', type: :regular
        %li.nav-item
          = link_to history_path, title: 'History', class: "nav-link" do
            = fa_icon 'book', text: 'History'
        %li.nav-item
          = link_to notifications_path, title: 'Notifications', class: "nav-link" do
            = fa_icon 'bell'
            %span#recent_unread_count.count= current_user.notifications.recent_unread_count
