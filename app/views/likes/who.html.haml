= turbo_frame_tag dom_id(@likeable, "who_liked") do
  .modal
    .modal_content
      .row
        .col-12
          = link_to path_to_likeable(@likeable), class: "close-btn", title: "Close" do
            %i.fa-solid.fa-xmark
          %h1 Who liked this #{@likeable.class.name.downcase}
          %p
            = @likeable.users_who_liked.count
            users
          = render 'users/badge', users: @likeable.users_who_liked
