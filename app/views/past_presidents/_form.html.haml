= form_with model: @past_president, local: true do |f|
  = render 'notifications/error_messages', object: f.object

  .row
    .col-12.col-lg-6
      .field
        = f.label :first_name
        = f.text_field :first_name
      .field
        = f.label :last_name
        = f.text_field :last_name
    .col-12.col-lg-6
      .field
        = f.label :avatar, 'Your avatar'
        = f.hidden_field :avatar, value: f.object.avatar.signed_id if f.object.avatar.attached?
        = f.file_field :avatar, direct_upload: true
        - if f.object.avatar.attached?
          = image_tag thumb_image(f.object.avatar)
          %br
          -# = link_to 'Remove avatar', remove_avatar_user_path(f.object)
  .row
    .col-12.col-md-6
      .field
        = f.label :term_order, 'Term order number'
        = f.number_field :term_order
    .col-6.col-md-3
      .field
        = f.label :term_started_at
        = f.date_select :term_started_at, discard_day: true, discard_month: true,
        start_year: 1935
    .col-6.col-md-3
      .field
        = f.label :term_ended_at
        = f.date_select :term_ended_at, discard_day: true, discard_month: true,
        start_year: 1935, include_blank: true
  .field
    = f.label :bio
    = f.text_area :bio, rows: '5'
  .actions
    = f.submit class: 'btn btn-primary'
