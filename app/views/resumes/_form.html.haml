= form_for @resume do |f|
  = render 'notifications/error_messages', object: f.object

  .row
    .col-12
      .field
        = f.label :is_listed do
          = f.check_box :is_listed
          List Resume (uncheck this if you want to hide your resume from listing)
      .field
        = f.label :title
        = f.text_field :title
  .row
    .col-12.col-md-6
      .field
        = f.label :classification
        = f.select :classification,
        options_for_select(Resume.select_classification_options,
          selected: f.object.classification), { prompt: '- Select One -' },
          { class: 'full_width' }
    .col-12.col-md-6
      .field
        = f.label :status
        = f.select :status,
        options_for_select(Resume.select_status_options,
          selected: f.object.status), { prompt: '- Select One -' },
          { class: 'full_width' }
  .row
    .col-12.col-md-6
      .field
        = f.label :file
        = f.hidden_field :file, value: f.object.file.signed_id if f.object.file.attached?
        = f.file_field :file, direct_upload: true
    .col-12.col-md-6
      - if f.object.file.attached?
        = display_file(f.object.file)
  .row
    .col-12
      .actions
        = f.submit class: 'btn btn-primary'
