= form_with model: user, local: true do |f|
  = render 'notifications/error_messages', object: f.object
  .row
    .col-12.col-lg-6
      .field
        = f.label :first_name
        = f.text_field :first_name
      .field
        = f.label :last_name
        = f.text_field :last_name
    .col-12.col-lg-6
      .field
        = f.label :avatar, 'Your avatar'
        = f.hidden_field :avatar, value: f.object.avatar.signed_id if f.object.avatar.attached?
        = f.file_field :avatar, direct_upload: true
        - if f.object.avatar.attached?
          = image_tag thumb_image(f.object.avatar)
          %br
          = link_to 'Remove avatar', remove_avatar_user_path(f.object) if f.object.persisted?
  = render 'profile/form', f: f
  = render 'phones/phone_form', f: f
  = render 'addresses/address_form', f: f
  = render 'websites/website_form', f: f
  .row
    .col-12
      .field
        = f.label :timezone, 'Your current timezone'
        = f.time_zone_select :timezone, ActiveSupport::TimeZone.us_zones
  .actions
    = f.submit class: 'btn btn-primary'
    %span.shift_right
      = link_to 'Cancel', f.object, class: 'btn btn-secondary'
