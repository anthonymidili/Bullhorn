- provide :title, 'My Profile'
.row
  .col-12.col-md-4
    .profile_head
      .links-end
        - if correct_user?(@user)
          = link_to edit_user_path(@user) do
            %i.fa-solid.fa-pen-to-square
            Edit Profile
          %br/
        = link_to photos_user_path(@user) do
          %i.fa-solid.fa-images
          My Photos
      = render 'users/avatar_info', user: @user
    = render 'users/profile_info', user: @user

  .col-12.col-md-8
    %h2 My Posts
    = turbo_frame_tag "posts" do
      = render @posts
    -# Infinate scroll posts with turbo.
    - if @next_page
      = turbo_frame_tag "load_more", 
      src: user_path(@user, page: @next_page, format: :turbo_stream), loading: :lazy
