- provide :title, 'Admins'
= render 'users/search_box'
.row
  .col-12.mb-3
    = link_to bug_reports_path, class: "btn btn-outline-primary" do
      = pluralize(BugReport.by_status_open.count, 'Open bug report')
.row
  .col-12
    %h2= pluralize(@users.by_admins.count, 'Admin')
    = turbo_frame_tag "admin_users", class: "row" do
      = render 'users/badge', users: @users.by_admins, show_admin_form: @show_admin_form
    %hr/
    %h2= pluralize(@users.by_other_users.count, 'Other user')
    = turbo_frame_tag "other_users", class: "row" do
      = render 'users/badge', users: @users.by_other_users, show_admin_form: @show_admin_form
