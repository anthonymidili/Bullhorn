{
  "$schema": "railway.com",
  "build": {
    "builder": "RAILPACK",
    "env": {
      "RAILPACK_BUILD_APT_PACKAGES": "libvips-dev",
      "RAILPACK_DEPLOY_APT_PACKAGES": "libvips42",
      "LD_LIBRARY_PATH": "/usr/lib/x86_64-linux-gnu:/usr/local/lib"
    }
  },
  "deploy": {
    "runtime": "v2"
  }
}
